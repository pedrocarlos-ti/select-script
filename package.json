{
  "name": "selectscript",
  "publisher": "melro-io",
  "displayName": "SelectScript",
  "description": "Quick and intuitive dropdown selector for your package.json scripts",
  "repository": {
    "type": "git",
    "url": "https://github.com/pedrocarlos-ti/select-script"
  },
  "icon": "icon.png",
  "keywords": [
    "npm",
    "scripts",
    "package.json",
    "runner",
    "dropdown",
    "quickpick",
    "terminal"
  ],
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:package.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.runNpmScript",
        "title": "SelectScript: Run NPM Script"
      },
      {
        "command": "extension.runNpmScriptFromCommandPalette",
        "title": "SelectScript: Run NPM Script from Command Palette"
      }
    ],
    "keybindings": [
      {
        "command": "extension.runNpmScriptFromCommandPalette",
        "key": "shift+1",
        "mac": "shift+cmd+1",
        "win": "shift+ctrl+1",
        "linux": "shift+ctrl+1"
      }
    ],
    "configuration": {
      "title": "SelectScript",
      "properties": {
        "selectscript.trackUsage": {
          "type": "boolean",
          "default": true,
          "description": "Track script usage statistics"
        }
      }
    }
  },
  "scripts": {
    "publish": "rm intro.gif && vsce publish",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.1",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "license": "MIT"
}
